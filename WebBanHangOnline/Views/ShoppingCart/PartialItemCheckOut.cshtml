@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>
<table class="table table-hover">

    @if (Model != null && Model.Any())
    {
        var i = 0;
        var sum = Decimal.Zero;
        <thead>
            <tr style="width:100%">
                <th>STT</th>
                <th>Tên</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sum += item.TotalPrice;
            <tr class="text-center">
                <td>@(i+1)</td>
                <td>
                    @item.ProductName
                </td>
                <td>@item.Quantity</td>

                <td>@WebBanHangOnline.Common.FormatNumber(item.TotalPrice)</td>
            </tr>
                i++;
            }
        </tbody>
        <tr>
            <th colspan="4" class="text-right">Tổng:</th>
            <th class="text-left">@WebBanHangOnline.Common.FormatNumber(sum, 0)</th>
        </tr>
    }
    else
    {
        <tr>
            <th col-span="12">Không có sản phẩm nào trong giỏ hàng!</th>
        </tr>
    }
</table>

