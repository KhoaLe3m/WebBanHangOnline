@model PagedList.PagedList<WebBanHangOnline.Models.EF.New>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
@*<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/responsive.css">*@
<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/categories_responsive.css">
<link rel="stylesheet" type="text/css" href="~/Content/Assets/styles/bootstrap4/bootstrap.min.css">

<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2>Tin tức</h2>

<style>
    .news_section_container {
        margin-top: 160px;
    }

    .title-new {
        border-bottom: 1px solid;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="/tin-tuc"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2 class="title-new">Tin tức</h2>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
        foreach (var item in Model)
        {
            <div class="row" style="margin-bottom:10px">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="/chi-tiet/@item.Alias-@item.Id" title="@item.Title"><img height="150px" width="150px" src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3><a href="/tin-tuc/@item.Alias-n@(item.Id)">@item.Title</a></h3>
                    </div>
                    <div class="desctiption-box">
                        @item.Description
                    </div>
                </div>
            </div>
            i++;
        }
    }
    <div class="row">
        <div class="col-6"></div>
        <div class="col-6" style="text-align:right">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>
    </div>

</div>

