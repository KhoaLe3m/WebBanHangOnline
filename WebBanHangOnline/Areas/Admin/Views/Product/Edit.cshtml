@model WebBanHangOnline.Models.EF.Product

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    var title = "Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/product" class="nav-link">@title</a>
        </li>
    </ul>}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật  @title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@title</a></li>
                    <li class="breadcrumb-item active">Cập nhật </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật  @title</h3>

            <div class="card-tools">
            </div>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x=>x.Id)
                    @Html.HiddenFor(x=>x.CreateAt)
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#thongtinsanpham" data-toggle="tab">Thông tin sản phẩm</a></li>
                                <li class="nav-item"><a class="nav-link" href="#seo" data-toggle="tab">SEO</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="thongtinsanpham">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Tên @title</label>
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Alias</label>
                                        @Html.TextBoxFor(x => x.Alias, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Alias, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">SKU</label>
                                        @Html.TextBoxFor(x => x.ProductCode, new { @class = "form-control", @placeholder = "Mã sản phẩm" })
                                        @Html.ValidationMessageFor(x => x.ProductCode, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Danh mục sản phẩm</label>
                                        @Html.DropDownListFor(x => x.ProductCategoryId, ViewBag.ProductCategory as SelectList, "-chọn danh mục sản phẩm-", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.ProductCategoryId, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Mô tả</label>
                                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Mô tả sản phẩm" })
                                        @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Chi tiết</label>
                                        @Html.TextAreaFor(x => x.Detail, new { @class = "form-control", @placeholder = "Chi tiết sản phẩm", @id = "txtDetail" })
                                        @Html.ValidationMessageFor(x => x.Detail, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="row">
                                        <div class="col-2">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Số lượng</label>
                                                @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", @placeholder = "Số lượng sản phẩm" })
                                                @Html.ValidationMessageFor(x => x.Quantity, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Giá</label>
                                                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Giá sản phẩm", @id = "price" })
                                                @Html.ValidationMessageFor(x => x.Price, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Giá khuyến mãi</label>
                                                @Html.TextBoxFor(x => x.PriceSale, new { @class = "form-control", @placeholder = "Giá sản phẩm khuyến mãi" })
                                                @Html.ValidationMessageFor(x => x.PriceSale, null, new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="row">
                                                <div class="col-auto">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">Hiển thị</label>
                                                        @Html.CheckBoxFor(x => x.IsActive, new { @checked = "@checked" })
                                                        @Html.ValidationMessageFor(x => x.IsActive, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">HOT</label>
                                                        @Html.CheckBoxFor(x => x.IsHot, new { })
                                                        @Html.ValidationMessageFor(x => x.IsHot, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">Nổi bật</label>
                                                        @Html.CheckBoxFor(x => x.IsFeature, new { })
                                                        @Html.ValidationMessageFor(x => x.IsFeature, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="form-group">
                                                        <label for="exampleInputPassword1">Khuyến mãi</label>
                                                        @Html.CheckBoxFor(x => x.IsSale, new { })
                                                        @Html.ValidationMessageFor(x => x.IsSale, null, new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="tab-pane" id="seo">
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Seo Title</label>
                                        @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control", @placeholder = "Seo Title" })
                                        @Html.ValidationMessageFor(x => x.SeoTitle, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">SEO Key Words</label>
                                        @Html.TextAreaFor(x => x.SeoKeyWords, new { @class = "form-control", @placeholder = "SEO Key Words" })
                                        @Html.ValidationMessageFor(x => x.SeoKeyWords, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Mô tả SEO</label>
                                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control", @placeholder = "Mô tả SEO" })
                                        @Html.ValidationMessageFor(x => x.SeoDescription, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">

                                <a class="btn btn-danger" href="/admin/product">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace("txtDetail", {
                customConfig: '\content\ckeditor\config.js',
                extraAllowContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl);
            }
            finder.popup();

        }
        function addImageProduct(url) {
            var current = $('#tCurrentId').val();
            var currentId = parseInt(current) + 1;
            var str = "";
            if (currentId == 1) {
                str += `<tr class="text-center" id="trow_${currentId}">
                        <td>${currentId}</td>
                        <td><img src="${url}" width="150px" height="150px" /> <input type="hidden" value="${url}" name="Images"/> </td>
                        <td><input type="radio" value="${currentId}" name="rdDefault" checked="checked" /></td>
                        <td><a class="btn btn-sm btn-danger btnXoaAnh" data-id = ${currentId}>Xóa</a></td>
                                                </tr>`;
            } else {
                str += `<tr class="text-center" id="trow_${currentId}">
                        <td>${currentId}</td>
                        <td><img src="${url}" width="150px" height="150px" /><input type="hidden" value="${url}" name="Images" /></td>
                        <td><input type="radio" value="${currentId}" name="rdDefault"/></td>
                        <td><a class="btn btn-sm btn-danger btnXoaAnh" data-id = ${currentId}>Xóa</a></td>
                                                </tr>`;
            }

            $('#bodyImages').append(str);
            $('#tCurrentId').val(currentId);
        }

    </script>
}



