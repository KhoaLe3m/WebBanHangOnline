@using WebBanHangOnline
@model WebBanHangOnline.Models.SettingSystemViewModel
@using (Ajax.BeginForm("AddSetting", "SettingSystem", FormMethod.Post, new AjaxOptions
{
OnBegin = "OnBegin",
OnSuccess = "OnSuccess",
OnFailure = "OnFailure"
}))
{
    <script>
        function OnBegin(rs) {
            $("#load_page").html("Đang lưu...");
        }
        function OnSuccess(rs) {
            $("#load_page").html("Thành công!");
        }
        function OnFailure(rs) {
        }
    </script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="bs-stepper-content">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#thongtinsanpham" data-toggle="tab">Thông tin sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="#seo" data-toggle="tab">SEO</a></li>
                </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="thongtinsanpham">
                        <div class="form-group">
                            <label>Tiêu đề trang</label>
                            <input type="text" class="form-control" name="SettingTitle" value="@WebBanHangOnline.SettingHelper.GetValue("SettingTitle")" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Logo</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="text" name="SettingLogo" id="txtSettingLogo" class="form-control" />
                                </div>
                                <div class="input-group-append">
                                    <input type="button" value="Tải ảnh" onclick="BrowseServer('txtSettingLogo')" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Hotline</label>
                            <input type="text" class="form-control" name="SettingHoline" value="@WebBanHangOnline.SettingHelper.GetValue("SettingHoline")" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="SettingEmail" value="@WebBanHangOnline.SettingHelper.GetValue("SettingEmail")" />
                        </div>
                    </div>

                    <div class="tab-pane" id="seo">
                        <div class="form-group">
                            <label>Tiêu đề seo</label>
                            <input type="text" class="form-control" name="SettingTitleSeo" value="@WebBanHangOnline.SettingHelper.GetValue("SettingTitleSeo")" />
                        </div>
                        <div class="form-group">
                            <label>Chi tiết seo</label>
                            <input type="text" class="form-control" name="SettingDescSeo" value="@WebBanHangOnline.SettingHelper.GetValue("SettingDescSeo")" />
                        </div>
                        <div class="form-group">
                            <label>Từ khóa seo</label>
                            <input type="text" class="form-control" name="SettingKeySeo" value="@WebBanHangOnline.SettingHelper.GetValue("SettingKeySeo")" />
                        </div>
                    </div>
                </div>
                <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">

                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div><!-- /.card-body -->
        </div>

    </div>
}

