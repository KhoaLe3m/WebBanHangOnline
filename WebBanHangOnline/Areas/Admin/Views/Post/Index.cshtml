@model IEnumerable<WebBanHangOnline.Models.EF.Post>
@{
    ViewBag.Title = "Danh mục bài viết";
    var title = "Bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/post" class="nav-link">@title</a>
        </li>
    </ul>}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">@title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @title</h3>

            <div class="card-tools">
                <a href="/admin/post/add" class="btn btn-primary">Thêm @title</a>
            </div>
            <div class="card-tools">
                <a class="btn btn-danger" id="btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /> </th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tiêu đề tin</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? " <i class ='fa fa-check text-success'> </i>" : "<i class ='fas fa-times  text-danger'> </i>";

                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" id="checkBoxItem" value="@item.Id" /> </td>
                                <td>@i</td>
                                <td><img src="@item.Image" width="150px" height="150px" /></td>
                                <td>@item.Title</td>
                                <td>@item.CreateAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href="#" data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/post/edit/@item.Id" class="btn btn-warning">Sửa</a>
                                    <a data-id='@item.Id' class="btn btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                    <td colspan="4">Không có bản ghi nào</td>
                }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                Footer
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    @section scripts{
        <script>
            $(document).ready(function () {
                $('body').on('click', "#btnDeleteAll", function (e) {
                    e.preventDefault();
                    var checkBoxs = $(this).parents(".card").find("tr td input:checkbox");
                    var str = "";
                    var i = 0;
                    checkBoxs.each(function () {
                        if (this.checked) {
                            checkBoxs.attr('selected', "checked");
                            var id = $(this).val();
                            if (i == 0)
                                str += id;
                            else
                                str += "," + id;
                            i++;
                        } else {
                            checkBoxs.attr('selected', "");
                        }
                    })
                    if (str.length > 0) {
                        var conf = confirm("Bạn có muốn xóa các bản ghi này không?");
                        if (conf === true) {
                            $.ajax({
                                url: "/admin/post/DeleteAll",
                                type: "POST",
                                data: { ids: str },
                                success: function (rs) {
                                    if (rs.success == true) {
                                        location.reload();
                                    }
                                }

                            })
                        }
                    }



                })
                $('body').on('change', '#selectAll', function () {
                    var checkStatus = this.checked;
                    var checkBoxs = $(this).parents(".card-body").find("tr td input:checkbox");
                    checkBoxs.each(function () {
                        this.checked = checkStatus;
                        if (checkStatus) {
                            checkBoxs.attr("selected", "checked");
                        }
                        else {
                            checkBoxs.attr("selected", "");
                        }
                    })
                })
                $('body').on('click', '.btnDelete', function () {
                    var id = $(this).data("id");
                    var conf = confirm("Bạn có muốn xóa bản ghi này không");
                    if (conf === true) {
                        $.ajax({
                            url: "/admin/post/delete",
                            type: "POST",
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success === true) {
                                    $("#trow_" + id).remove();
                                }
                            }
                        });
                    }
                })
                $('body').on('click', '.btnActive', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var id = $(this).data("id");
                    $.ajax({
                        url: "/admin/post/Active",
                        type: "POST",
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.IsActive) {
                                    btn.html("<i class ='fa fa-check text-success'> </i>");
                                }
                                else {
                                    btn.html("<i class ='fas fa-times  text-danger'> </i>");
                                }
                            }
                        }
                    });

                })
            })

        </script>
    }


